[flake8]
max-line-length = 100
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info
ignore = 
    E501,  # line too long (handled by formatter)
    W503,  # line break before binary operator
    E203   # whitespace before ':'
per-file-ignores =
    __init__.py: F401
